<%- include('partials/header') %>

    <section class="authContainer container row">
        <% if (messages.error) { %>
            <%= messages.error %>
                <% } %>
                    <form action="/auth/login" method="POST" class="col s12">
                        <h1 class="white-text authContainerHeading">Login</h1>
                        <div class="input-field">
                            <input class="authContainerInput" type="email" name="email" id="email" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field">
                            <input class="authContainerInput" type="password" name="password" id="password" required>
                            <label for="password">Password</label>
                        </div>
                        <button class="authContainerInput btn" type="submit">Login</button>
                    </form>
    </section>
    <%- include('partials/footer') %>