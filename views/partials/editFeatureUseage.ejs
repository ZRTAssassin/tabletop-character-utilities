<div class="row">
    <div class="col s12">
        <fieldset>
            <legend>Feature Usage</legend>
            <div class="row">
                <div class="input-field col s12 m4">
                    <input type="text" name="activation" id="activation" value="<%= trait.activation%>" />
                    <label for="activation">Activation Cost</label>
                </div>
                <div class="input-field col s12 m6 offset-m2">
                    <select form="newAbility" name="activationType" id="activationType">
                        <option value="" <%=trait.activationType==="" ? 'selected' : '' %>></option>
                        <option value="Action" <%=trait.activationType==="Action" ? 'selected' : '' %>
                            >Action</option>
                        <option value="Bonus Action" <%=trait.activationType==="Bonus Action" ? 'selected'
                            : '' %>>Bonus Action</option>
                        <option value="Crew Action" <%=trait.activationType==="Crew Action" ? 'selected'
                            : '' %>>Crew Action</option>
                        <option value="Minutes" <%=trait.activationType==="Minutes" ? 'selected' : '' %>
                            >Minutes</option>
                        <option value="Hours" <%=trait.activationType==="Hours" ? 'selected' : '' %>>Hours
                        </option>
                        <option value="Days" <%=trait.activationType==="Days" ? 'selected' : '' %>>Days
                        </option>
                        <option value="Lair Action" <%=trait.activationType==="Lair Action" ? 'selected'
                            : '' %>>Lair Action</option>
                        <option value="Legendary Action" <%=trait.activationType==="Legendary Action"
                            ? 'selected' : '' %>>Legendary Action</option>
                        <option value="Weapon" <%=trait.activationType==="Weapon" ? 'selected' : '' %>>None
                        </option>
                        <option value="Reaction" <%=trait.activationType==="Reaction" ? 'selected' : '' %>
                            >Reaction</option>
                        <option value="Special" <%=trait.activationType==="Special" ? 'selected' : '' %>
                            >Special</option>
                    </select>
                    <label for="activationType"></label>
                </div>
            </div>
            <div class="row">
                <div class="col s12 white-text input-field">
                    <textarea class="materialize-textarea" name="activationCondition"
                        id="activationCondition" data-length="120"
                        value="<%= trait.activationCondition%>"></textarea>
                    <label for="activationCondition">Activation Condition</label>
                </div>
            </div>
