                    </select>
                    <label for="targetType"></label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m4">
                    <input type="text" name="rangeNormal" id="rangeNormal" />
                    <!-- pattern="[a-zA-Z]+ \([0-9]+\)" /> -->
                    <label for="rangeNormal">Range (Normal)</label>
                </div>
                <div class="input-field col s12 m4">
                    <input type="text" name="rangeMax" id="rangeMax" />
