<body class="grey darken-3 white-text">



    <header class="header black">
        <nav class="nav black">
            <div class="nav-wrapper container">
                <a class="brand-logo center" href="/">
                    <i class="fa-solid fa-dice-d20 teal-text text-accent-4" style="float: none"></i>

                    <!-- <img class="svg" src="/img/logoedit.svg" alt="tabletop role playing game builder logo"> -->
                </a>
                <a href="#" class="sidenav-trigger" data-target="slide-out">
                    <i class="fa-sharp fa-solid fa-bars teal-text text-accent-4"></i>
                </a>


                <ul class="left hide-on-med-and-down">
                    <li class="col s12"><a class="teal-text text-accent-4" href="/">Home</a></li>
                    <!-- <li class="col s12"><a class="teal-text text-accent-4" href="/character">Characters</a></li> -->
                    <% if (isLoggedIn) { %>
                        <!-- <li class="col s12"><a class="teal-text text-accent-4" href="/traits">All Traits</a></li>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/traits/add">New Trait</a></li> -->
                        <li><a class="dropdown-trigger teal-text text-accent-4" href="#!"
                                data-target="dropdown1">Traits<i class="material-icons right">arrow_drop_down</i></a>
                        </li>
                        <li><a class="dropdown-trigger teal-text text-accent-4" href="#!"
                            data-target="dropdown2">By Category<i class="material-icons right">arrow_drop_down</i></a>
                    </li>
                        <% } %>
                </ul>

                <!-- Dropdown Structure -->
                <ul id="dropdown1" class="dropdown-content">
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits/add">New Trait</a></li>
                    <li class="divider"></li>
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits">All Traits</a></li>
                </ul>
                <ul id="dropdown2" class="dropdown-content">
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/buff">Buffs</a></li>
                    <li class="col s12"><a class="teal-text text-accent-4"
                            href="/traits/category/conditions">Conditions</a></li>
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/damage">Damage</a>
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/debuff">Debuffs</a>
                    </li>
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/movement">Movement</a>
                    </li>
                    <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/utility">Utility</a>
                    </li>
                </ul>

                <ul class="right hide-on-med-and-down">
                    <% if (!isLoggedIn) { %>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/auth/register">Register</a></li>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/auth/login">Login</a></li>
                        <% } %>
                            <% if (isLoggedIn) { %>
                                <li class="col s12"><a class="teal-text text-accent-4" href="/auth/logout">Logout</a>
                                </li>
                                <% } %>

                </ul>

                <ul class="sidenav grey darken-3" id="slide-out">
                    <li class="col s12"><a class="teal-text text-accent-4" href="/">Home</a></li>
                    <!-- <li class="col s12"><a class="teal-text text-accent-4" href="/character">Characters</a></li> -->
                    <% if (isLoggedIn) { %>
                        <li class="divider"></li>
                        <li><a class="subheader white-text">Traits</a></li>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/traits/add">New Trait</a></li>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/traits">All Traits</a></li>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/buff">Buffs</a>
                        </li>
                        <li class="col s12"><a class="teal-text text-accent-4"
                                href="/traits/category/conditions">Conditions</a></li>
                        <li class="col s12"><a class="teal-text text-accent-4" href="/traits/category/damage">Damage</a>
                        <li class="col s12"><a class="teal-text text-accent-4"
                                href="/traits/category/debuff">Debuffs</a>
                        </li>
                        <li class="col s12"><a class="teal-text text-accent-4"
                                href="/traits/category/movement">Movement</a>
                        </li>
                        <li class="col s12"><a class="teal-text text-accent-4"
                                href="/traits/category/utility">Utility</a>
                        </li>
                        <li class="divider"></li>
                        <% } %>
                            <% if (!isLoggedIn) { %>
                                <li class="col s12"><a class="teal-text text-accent-4"
                                        href="/auth/register">Register</a></li>
                                <li class="col s12"><a class="teal-text text-accent-4" href="/auth/login">Login</a></li>
                                <% } %>
                                    <% if (isLoggedIn) { %>
                                        <li class="col s12"><a class="teal-text text-accent-4"
                                                href="/auth/logout">Logout</a>
                                        </li>
                                        <% } %>
                </ul>
            </div>
