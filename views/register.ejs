<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <%- include('partials/icon') %>
        <link rel="stylesheet" href="/css/normalize.css">
        <!-- external style sheets -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <!-- font awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
            integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />
        <!-- custom -->
        <link rel="stylesheet" href="/css/style.css">
</head>

<body class="grey darken-4">

    <%- include('partials/navbar') %>
        <section class="authContainer container row">
            <!-- <section class="container"> -->
            <form action="/auth/register" method="POST" class="col s12">
                <h1 class="authContainerHeading">Sign up</h1>
                <div class="input-field">
                    <input class="authContainerInput" type="text" name="name" id="name" required />
                    <label class="" for="name">Username </label>
                </div>
                <div class="input-field">
                    <input class="authContainerInput" type="email" name="email" id="email" required />
                    <label class="" for="email">Email </label>
                </div>
                <div class="input-field">
                    <input class="authContainerInput" type="password" name="password" id="password" required />
                    <label class="" for="password">Password</label>
                </div>
                <button class="authContainerInput" type="submit">COMPLETE REGISTRATION</button>

            </form>
        </section>
        <section class="container">
            <p class="authRibbon">Already have an account?</p>
            <a href="/auth/login" class="authRedirect">Login</a>
        </section>
        <!-- </section> -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>

</html>