                                    <option value="Special">Special</option>
                                </select>
                                <label for="durationUnits"></label>
                            </div>

                        </div>
                        <div class="row">
                            <div class="input-field col s12 m4">
                                <input type="text" name="limitedUsesValue" id="limitedUsesValue" />
                                <!-- pattern="[a-zA-Z]+ \([0-9]+\)" /> -->
                                <label for="limitedUsesValue">Limited Uses (Remaining)</label>
                            </div>
                            <div class="input-field col s12 m4">
                                <input type="text" name="limitedUsesMax" id="limitedUsesMax" />
                                <!-- pattern="[a-zA-Z]+ \([0-9]+\)" /> -->
                                <label for="limitedUsesMax">Limited Uses (Max)</label>
                            </div>
                            <div class="input-field col s12 m4">
                                <select form="newAbility" name="limitedUsesPer" id="limitedUsesPer" required>
                                    <option value="" selected></option>
                                    <option value="Short Rest">Short Rest</option>
                                    <option value="Long Rest">Long Rest</option>
