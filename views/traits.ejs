<%- include('partials/header') %>
    <div class="container row">
        <div class="">
            <ul class="collapsible">
                <li>
                    <div class="collapsible-header row">
                        <div class="col s4">
                            Trait name appears here.
                        </div>
                        <div class="col s4">
                            Damage type appears here.
                        </div>
                        <div class="col s1 offset-s2">
                            <button class="btn delete-button  tooltipped" data-tooltip="This is the delete button."">
                                <i class=" fa-solid fa-trash">
                                </i>
                        </div>
                        <div class="col s1">
                            <button type="button" class="edit-button btn tooltipped"
                                data-tooltip="This is the edit button."><i class="fa-solid fa-pen-to-square">
                                </i>
                            </button>
                        </div>
                    </div>
                    <div class="collapsible-body">
                        <span>
                            Trait description will appear here.
                        </span>
                    </div>
                </li>
                <% for(var i=0; i < traits.length; i++) {%>
                    <li>
                        <div class="collapsible-header row">
                            <div class="col s4">
                                <%= traits[i].traitName %>
                            </div>
                            <div class="col s4">
                                <%= traits[i].traitType %>
                            </div>
                            <div class="col s1 offset-s2">
                                <form action="/traits/deleteTrait/<%=traits[i]._id%>?_method=DELETE" method="POST"
                                    class="">
                                    <button class="delete-button btn tooltipped"
                                        data-tooltip="Delete  <%= traits[i].traitName %>">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="col s1">

                                <a href="/traits/edit/<%=traits[i]._id%>">
                                    <button type="button" class="edit-button btn tooltipped"
                                        data-tooltip="Edit <%= traits[i].traitName %>">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                </a>
                            </div>
                        </div>
                        <div class="collapsible-body row">
                            <div class="col s12">
                                <p>
                                    <%= traits[i].traitDescription %>
                                </p>
                            </div>
                        </div>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
    <%- include('partials/footer') %>