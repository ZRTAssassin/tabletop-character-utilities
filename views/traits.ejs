<%- include('partials/header') %>

    <div class="container white-text">
        <form action="/traits/addTrait" method="POST" id="newAbility">

            <h1>Enter New Trait</h1>


            <div class="row">
                <div class="input-field col s12 m6">
                    <input type="text" name="abilityName" id="abilityName" /> <!-- required> -->
                    <label for="abilityName">Ability Name</label>
                </div>
                <div class="input-field col s12 m6">
                    <input type="text" name="source" id="source" />
                    <!-- pattern="[a-zA-Z]+ \([0-9]+\)" /> -->
                    <label for="source">Source</label>
                </div>
            </div>
            <div class="row">
                <div class="white-text input-field col s12 m6">
                    <textarea class="materialize-textarea" name="abilityDescription" id="abilityDescription"></textarea>
                    <label for="abilityDescription">Ability Description</label>
                </div>

                <div class="input-field col s12 m6">
                    <select form="newAbility" name="damageType" id="damage-types" required>
                        <option value="None">None</option>
                        <option value="Acid">Acid</option>
                        <option value="Bludgeoning">Bludgeoning</option>
                        <option value="Cold">Cold</option>
                        <option value="Fire">Fire</option>
                        <option value="Force">Force</option>
                        <option value="Lightning">Lightning</option>
                        <option value="Necrotic">Necrotic</option>
                        <option value="Piercing">Piercing</option>
                        <option value="Poison">Poison</option>
                        <option value="Psychic">Psychic</option>
                        <option value="Radiant">Radiant</option>
                        <option value="Same">Same</option>
                        <option value="Slashing">Slashing</option>
                        <option value="Thunder">Thunder</option>
                    </select>
                    <label for="damage-types">Choose a damage type:</label>
                </div>
            </div>
            <!-- required> -->
            <div class="row">
                <div class="col s12 m6">
                    <fieldset>
                        <legend>Damage Options</legend>
                        <p class="">
                            <label for="damageSingle">
                                <input type="checkbox" id="damageSingle" class="filled-in" name="damageSingle"
                                    value="true" />
                                <span>Damage Single</span>
                            </label>
                        </p>
                        <p class="">
                            <label for="damageArea">
                                <input type="checkbox" id="damageArea" class="filled-in" name="damageArea"
                                    value="true" />
                                <span>Damage Area</span>
                            </label>
                        </p>
                    </fieldset>
                </div>
                <div class="col s12 m6">
                    <fieldset>
                        <legend>Buff Options</legend>
                        <p>
                            <label for="buffSelf">
                                <input type="checkbox" id="buffSelf" class="filled-in" name="buffSelf" value="true" />
                                <span>Buff Self</span>
                            </label>
                        </p>
                        <p>
                            <label for="buffAllies">
                                <input type="checkbox" id="buffAllies" class="filled-in" name="buffAllies"
                                    value="true" />
                                <span>Buff Allies</span>
                            </label>
                        </p>
                    </fieldset>
                </div>
                <div class="col s12 m6">
                    <fieldset>
                        <legend>Debuff Options</legend>
                        <p>
                            <label for="debuffSingle">
                                <input type="checkbox" id="debuffSingle" class="filled-in" name="debuffSingle"
                                    value="true" />
                                <span>Debuff Single</span>
                            </label>
                        </p>
                        <p>
                            <label for="debuffArea">
                                <input type="checkbox" id="debuffArea" class="filled-in" name="debuffArea"
                                    value="true" />
                                <span>Debuff Area</span>
                            </label>
                        </p>
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button class="btn  waves-effect waves-light" type="submit"><i class="fa-solid fa-check"></i>Add new
                        trait</button>
                </div>
            </div>

        </form>
        </section>

        <div class="row">
            <form action="/traits/addTestTrait" method="POST">
                <h2>Add random trait!</h2>
                <p>
                    Add a trait for testing.
                </p>
                <button class="btn" type="submit" id="random-trait-button">Add Trait</button>
            </form>
        </div>
        <div class="row">
            <ul class="collapsible">
                <li>
                    <div class="collapsible-header row">

                        <div class="col s4">
                            Trait name appears here.
                        </div>
                        <div class="col s4">
                            Damage type appears here.
                        </div>
                        <div class="col s4  right-align">
                            <form action="/traits" method="POST" class="">
                                <button class="btn delete-button  tooltipped" data-tooltip="Delete your trait!"">
                                    <i class=" fa-solid fa-trash">
                                    </i>
                                </button>
                                <a href="/traits">
                                    <button type="button" class="edit-button btn tooltipped"
                                        data-tooltip="Edit your trait!"><i class="fa-solid fa-pen-to-square">
                                        </i>
                                    </button>
                                </a>
                            </form>
                        </div>
                    </div>
                    <div class="collapsible-body">
                        <span>
                            Trait description will appear here.
                        </span>
                    </div>
                </li>
                <% for(var i=0; i < traits.length; i++) {%>
                    <li>
                        <div class="collapsible-header row">

                            <div class="col s4">
                                <%= traits[i].abilityName %>
                            </div>
                            <div class="col s4">
                                <%= traits[i].damageType %>
                            </div>
                            <div class="col s4  right-align">
                                <form action="/traits/deleteTrait/<%=traits[i]._id%>?_method=DELETE" method="POST"
                                    class="">
                                    <button class="btn delete-button"><i class="fa-solid fa-trash"></i></button>
                                    <a href="/traits/edit/<%=traits[i]._id%>"><button type="button"
                                            class="edit-button btn"><i
                                                class="fa-solid fa-pen-to-square"></i></button></a>
                                </form>
                            </div>
                        </div>
                        <div class="collapsible-body row">
                            <div class="col s12">
                                <p>
                                    <%= traits[i].abilityDescription %>
                                </p>
                            </div>
                        </div>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
    <%- include('partials/footer') %>